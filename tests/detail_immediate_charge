            --url "http://127.0.0.1:8000/api/v1/pix/$1" \
            --header "Content-Type: application/x-www-form-urlencoded" && echo ""
            --header "Authorization: Bearer aEaItIjAYmSt-hQbThtQf6LHE-rrg-hXcWUYFZG2D84"
fi

